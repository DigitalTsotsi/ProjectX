.row
  %h1.span8= @medical_aid.name
  .span4
    %h3 Address
    %p= @medical_aid.address
    %h4 City
    %p= @medical_aid.city
    %h4 Province
    %p= @medical_aid.province
    %h4 Country
    %p= @medical_aid.country
  .span4
    %h3 Contact Person
    %p= @medical_aid.address
    %h4 Email
    %p= @medical_aid.email
    %h4 Telephone
    %p= @medical_aid.tel
    %h4 Fax
    %p= @medical_aid.fax
  .span8
    %h2.span7 Medical Aid Plans
    - @medical_aid.medical_aid_plan.each do |p|
      %h4.span4 p.plan_name
      %h2.span2 = link_to "Delete", medical_aid_plan_path(p.medical_aids_id)

